{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2018",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ES2018"
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
